<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox fx:controller="dissertation.gui.controllers.MainController" xmlns:fx="http://javafx.com/fxml" spacing="10" alignment="CENTER">
    <Label fx:id="titleLabel" text="Arya's Brookshear Machine"/>
    <TextArea fx:id="outputText" prefRowCount="15" prefColumnCount="30" editable="false"/>
    <Button fx:id="actionButton" text="Run Machine"/>
    <Button fx:id="newProgramButton" text="New program"/>
    <Button fx:id="loadProgramButton" text="Load/Edit program"/>
    <Button fx:id="exitButton" text="Exit"/>
</VBox>